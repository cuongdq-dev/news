---
import DetailArticle from "./_components/detail-article.astro";
import ListArticles from "./_components/list-articles.astro";

const { slug } = Astro.params;
const path = slug?.split("-");
---

<>
  {
    path?.length == 2 && path[0] == "trang" && Number(path[1]) > 0 ? (
      <ListArticles />
    ) : (
      <DetailArticle />
    )
  }
</>
