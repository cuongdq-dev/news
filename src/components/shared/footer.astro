---
import Hashtag from "~/assets/svgs/hashtag.astro";
import { OTHER_LINKS, SITE } from "~/lib/config";

const { categories } = Astro.props as { categories: CategoryItem[] };
---

<footer class="footer border-t border-base-content py-6 mt-5">
  <div class="container">
    <div class="flex flex-col gap-4">
      <aside class="flex items-center gap-2">
        <Hashtag />
        <p>
          <strong class="text-lg">{SITE.title}</strong>
          <br />
          Tổng hợp tin tức nóng hổi nhất trong ngày <a
            class="underline"
            href={SITE.url}
            target="_blank">{SITE.title}</a
          >.
        </p>
      </aside>
      <nav
        class="flex flex-col gap-4 lg:flex-row lg:flex-wrap text-base lg:text-sm font-semibold"
      >
        <a
          data-astro-prefetch="false"
          href={Astro.url.origin}
          class="link link-hover">Trang Chủ</a
        >
        <a
          data-astro-prefetch="false"
          href={`${Astro.url.origin}/bai-viet`}
          class="link link-hover">Bài Viết</a
        >
        {
          Number(categories?.length) &&
            categories?.map(({ name, slug, id }) => (
              <a
                data-astro-prefetch="false"
                href={`${Astro.url.origin}/danh-muc/${slug}`}
                class="link link-hover"
              >
                {name}
              </a>
            ))
        }
        <a
          data-astro-prefetch="false"
          href={`${Astro.url.origin}/tags`}
          class="link link-hover">Tags</a
        >
      </nav>
    </div>
    <div class="divider w-full h-1"></div>
    <div class="flex flex-col gap-4">
      <nav class="flex flex-wrap gap-4 text-xs mt-2">
        {
          OTHER_LINKS.map(({ href, text, target }) => (
            <a
              href={`${Astro.url.origin}/${href}`}
              class="link link-hover"
              target={target ?? "_self"}
            >
              {text}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</footer>
